<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="root" prefHeight="344.0" prefWidth="654.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.spacewars.control.TeamController">
   <bottom>
      <BorderPane prefHeight="37.0" prefWidth="665.0" BorderPane.alignment="CENTER">
         <right>
            <Button fx:id="okButton" mnemonicParsing="false" onAction="#onOKClicked" text="OK" BorderPane.alignment="CENTER" />
         </right>
         <padding>
            <Insets right="5.0" />
         </padding>
      </BorderPane>
   </bottom>
   <top>
      <HBox prefHeight="35.0" prefWidth="634.0" BorderPane.alignment="CENTER_LEFT">
         <children>
            <Label alignment="CENTER" prefHeight="24.0" prefWidth="76.0" text="Team Name:" />
            <TextField fx:id="teamTextField" prefHeight="25.0" prefWidth="229.0" text="Hitchhikers" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <BorderPane prefHeight="266.0" prefWidth="690.0" BorderPane.alignment="CENTER">
         <left>
            <VBox alignment="CENTER" maxWidth="Infinity" prefHeight="200" prefWidth="300" BorderPane.alignment="CENTER">
               <children>
                  <Label text="Available Ships:" />
                  <ListView fx:id="availableShipList" maxHeight="Infinity" maxWidth="Infinity" prefHeight="300" prefWidth="300" VBox.vgrow="ALWAYS" />
               </children>
               <BorderPane.margin>
                  <Insets left="5.0" />
               </BorderPane.margin>
            </VBox>
         </left>
         <center>
            <VBox alignment="CENTER" maxWidth="70.0" prefHeight="200" prefWidth="70.0" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddClicked" text="-&gt;" />
                  <Button fx:id="removeButton" mnemonicParsing="false" onAction="#onRemoveClicked" text="&lt;-" />
               </children>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </VBox>
         </center>
         <right>
            <VBox alignment="CENTER" maxWidth="Infinity" prefHeight="200" prefWidth="300" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="teamListLabel" text="Allied Team:" />
                  <ListView fx:id="teamList" maxHeight="Infinity" maxWidth="Infinity" prefHeight="300" prefWidth="300" VBox.vgrow="ALWAYS" />
               </children>
               <BorderPane.margin>
                  <Insets right="5.0" />
               </BorderPane.margin>
            </VBox>
         </right>
      </BorderPane>
   </center>
</BorderPane>
